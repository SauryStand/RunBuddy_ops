<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.runbuddy.dao.entity.HeartRateDao">

    <resultMap id="BaseResultMap" type="Role">
        <result property="HIGHEST_RATE" column="HIGHEST_RATE" javaType="string" jdbcType="VARCHAR"/>
        <result property="LOWEST_RATE" column="LOWEST_RATE" javaType="string" jdbcType="VARCHAR"/>
        <result property="AVEARAGE_RATE" column="AVEARAGE_RATE" javaType="string" jdbcType="VARCHAR"/>
        <result property="MOTION_STATE" column="MOTION_STATE" javaType="int" jdbcType="INTEGER"/>
        <result property="RECOMMEND_STATE" column="RECOMMEND_STATE" javaType="int" jdbcType="INTEGER"/>
        <result property="EXCEISE_TIME" column="EXCEISE_TIME" javaType="int" jdbcType="DATE"/>
        <result property="EXECISE_LOAD" column="EXECISE_LOAD" javaType="int" jdbcType="INTEGER"/>
        <result property="RECORD_DATE" column="RECORD_DATE" javaType="java.util.Date" jdbcType="DATE"/>
    </resultMap>

    <sql id="Base_Column_List">
        HIGHEST_RATE, LOWEST_RATE, AVEARAGE_RATE, MOTION_STATE, RECOMMEND_STATE, EXCEISE_TIME,
        EXECISE_LOAD, RECORD_DATE
    </sql>

    <!-- 或者根据运动时长查询数据-->
    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        sys_heartrate_data
        WHERE EXCEISE_TIME=#{EXCEISE_TIME,jdbcType=INTEGER}
    </select>

    <select id="getAllDate">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        sys_heartrate_data
    </select>
    
    <insert id="insert" parameterType="com.runbuddy.dao.entity.HeartRateDao">
        INSERT INTO sys_heartrate_data
        (HIGHEST_RATE,
         LOWEST_RATE,
         AVEARAGE_RATE,
         MOTION_STATE,
         RECOMMEND_STATE,
         EXCEISE_TIME,
         EXECISE_LOAD,
         RECORD_DATE)
         VALUE
         (#{HIGHEST_RATE,jdbcType=VARCHAR},
         #{LOWEST_RATE,jdbcType=VARCHAR},
         #{AVEARAGE_RATE,jdbcType=VARCHAR},
         #{MOTION_STATE,jdbcType=VARCHAR},
         #{RECOMMEND_STATE,jdbcType=VARCHAR},
         #{EXCEISE_TIME,jdbcType=VARCHAR},
         #{EXECISE_LOAD,jdbcType=VARCHAR},
         #{RECORD_DATE,jdbcType=VARCHAR}
         )
    </insert>




</mapper>